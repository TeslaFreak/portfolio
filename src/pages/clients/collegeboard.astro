---
import { slide } from "astro/transitions";
import ClientLayout from "../../layouts/ClientLayout.astro";
---

<ClientLayout
  title="College Board"
  prevLink="/clients/ge"
  nextLink="/clients/lobby"
  bgImgSrc="https://images.unsplash.com/photo-1503676260728-1c00da094a0b?q=80&w=2622&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
>
  <div class="flex flex-row justify-between gap-36">
    <div class="2xl:flex flex-col hidden">
      <div class="overflow-hidden">
        <p class="translate-y-full font-thin text-7xl">COLLEGE BOARD</p>
      </div>
      <div class="overflow-hidden pt-4">
        <p class="translate-y-full font-thin text-7xl">COLLEGE BOARD</p>
      </div>
      <div class="overflow-hidden pt-4">
        <p class="translate-y-full font-thin text-7xl">COLLEGE BOARD</p>
      </div>
    </div>
    <div class="flex flex-col">
      <div class="overflow-hidden">
        <p
          class="translate-y-full font-thin sm:text-7xl text-5xl 2xl:hidden flex"
        >
          COLLEGE BOARD
        </p>
        <div class="overflow-hidden 2xl:pt-0 pt-4">
          <p class="translate-y-full font-thin sm:text-7xl text-5xl">SENIOR</p>
        </div>
        <div class="overflow-hidden pt-4">
          <p class="translate-y-full font-thin sm:text-7xl text-5xl">
            FULL STACK
          </p>
        </div>
        <div class="overflow-hidden pt-4">
          <p class="translate-y-full font-thin sm:text-7xl text-5xl">
            DEVELOPER
          </p>
        </div>
      </div>
    </div>
    <div class="2xl:flex flex-col hidden">
      <div class="overflow-hidden">
        <p class="translate-y-full font-thin text-7xl">COLLEGE BOARD</p>
      </div>
      <div class="overflow-hidden">
        <p class="translate-y-full font-thin text-7xl">COLLEGE BOARD</p>
      </div>
    </div>
  </div>
  <div class="overflow-hidden pt-4">
    <p class="translate-y-full font-thin text-base sm:text-4xl">
      Mission-driven organization that connects students to college success and
      opportunity. It helps students prepare for a successful transition to
      college through programs and services in college readiness and college
      success.
    </p>
  </div>
  <div class="overflow-hidden pt-4">
    <p class="translate-y-full font-thin text-base sm:text-4xl">
      Working within the DevSecOps team to develop and maintain the highest
      security standards for the College Board's digital platforms.
    </p>
  </div>
</ClientLayout>

<script>
  document.addEventListener("astro:page-load", () => {
    const pList = document.querySelectorAll("p");
    const callback = (entries, observer) => {
      let lastVisibleIndex = 0;
      entries.forEach((entry, i) => {
        if (entry.isIntersecting) {
          entry.target.classList.add("slideIn");
          lastVisibleIndex = i;
        }
      });
    };
    const options = { rootMargin: "-10%" };
    const myObserver = new IntersectionObserver(callback, options);

    pList.forEach((p) => {
      myObserver.observe(p);
    });
  });
</script>

<style>
  .slideIn {
    animation: slide 0.5s ease-in-out;
    animation-delay: calc(var(--ao, 0) * 100ms);
    animation-fill-mode: forwards;
  }

  @keyframes slide {
    0% {
      transform: translate3d(0, 110%, 0);
    }

    100% {
      transform: translate3d(0, 0, 0);
    }
  }
</style>
